<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1A15"
    android:orientation="vertical"
    tools:context=".MusicRunActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/musical"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginStart="@dimen/_55sdp"
      android:layout_marginTop="@dimen/_72sdp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/pcoo" />


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:layout_below="@+id/musical"
        android:fontFamily="@font/ios_11_light"
        android:gravity="center"
        android:text="@string/your_music_is_now_playing"/>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_below="@+id/txt"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/play"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/seekbar"
        android:layout_centerHorizontal="true"
        android:background="#0360FF"
        android:src="@drawable/plays" />


    <ImageButton
        android:id="@+id/play1"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/play"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_marginTop="-43dp"
        android:layout_toEndOf="@+id/play"
        android:background="#0360FF"

        android:src="@drawable/bad_habita" />

    <ImageButton
        android:id="@+id/play2"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/play"
        android:layout_marginTop="-42dp"
        android:layout_marginRight="51dp"
        android:layout_toLeftOf="@+id/play"
        android:background="#0360FF"
        android:src="@drawable/demon" />




    <!--<Button-->
    <!--    android:id="@+id/okp"-->
    <!--    android:layout_width="wrap_content"-->
    <!--    android:layout_height="wrap_content"-->
    <!--    android:text="Button Click"/>-->
</RelativeLayout>